<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addStock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlg_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:text="주식 정보 입력"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/dlgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:background="#00ff0000"
            android:src="@drawable/dt_x" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="주식 종목 검색"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/dlg_searchbar"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/StockName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:hint="Search..." />

        <ImageButton
            android:id="@+id/stockSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#00ff0000"
            android:src="@drawable/dlg_searchbtn" />
    </LinearLayout>

    <TextView
        android:id="@+id/StockCodeDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:textColor="#BCBCBC"
        android:text="종목코드 " />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="종목 정보 추가"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/dlg_stockinfo"
        android:orientation="vertical">

        <EditText
            android:id="@+id/StockPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:hint="   주식 가격" />

        <EditText
            android:id="@+id/StockCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:hint="   주식 개수" />
    </LinearLayout>

    <Button
        android:id="@+id/dlgAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/dlg_addbtn"
        android:gravity="center"
        android:text="추가"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />
</LinearLayout>
